<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    xmlns:tools="http://schemas.android.com/tools"
    cardView:cardCornerRadius="2dp"
    cardView:cardElevation="4dp"
    cardView:cardPreventCornerOverlap="true"
    cardView:paddingEnd="@dimen/item_touch_helper_max_drag_scroll_per_frame"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/geefter">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/user_name"
                android:textColor="#666"
                android:textSize="14sp"
                android:id="@+id/geefter_name"/>

            <TextView
                android:id="@+id/timestamp"
                android:text="timestamp"
                android:layout_width="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/geefter">

            <ImageView
                android:id="@+id/geeft_image"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:backgroundTint="@android:color/darker_gray"
                android:background="@android:color/black"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/geeft_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/geeft_image"
                    android:maxLines="1"
                    android:padding="4dp"
                    android:textColor="#222"
                    android:textStyle="bold"
                    android:textSize="20dp" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/float_prenotation"
                    android:background="#00ffffff"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_favorite"
                    android:focusable="false"
                    android:clickable="false"
                    android:foreground="#a4ffffff"
                    android:visibility="visible"
                    />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/show_description"
                    android:layout_gravity="right"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#00ffffff"
                    android:src="@android:drawable/arrow_down_float"
                    android:focusableInTouchMode="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/description"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:id="@+id/geeft_description"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>