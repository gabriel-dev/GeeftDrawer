<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:cardView="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
android:layout_width="wrap_content"
android:layout_height="250dp"
android:layout_margin="15dp"
xmlns:tools="http://schemas.android.com/tools"
cardView:cardCornerRadius="2dp"
cardView:cardElevation="4dp"
cardView:cardPreventCornerOverlap="true"
cardView:paddingEnd="@dimen/item_touch_helper_max_drag_scroll_per_frame"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/geeft_image"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:backgroundTint="@android:color/darker_gray"
        android:background="@android:color/black"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/geeft_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geeft_image"
        android:maxLines="1"
        android:padding="4dp"
        android:textColor="#222"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geeft_name"
        android:maxLines="1"
        android:padding="5dp"
        android:text="@string/user_name"
        android:textColor="#666"
        android:textSize="14sp"
        android:id="@+id/geefter"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/geefter"
        android:maxLines="3"
        android:padding="5dp"
        android:text="@string/description"
        android:textColor="#666"
        android:textSize="14sp"
        android:id="@+id/geeft_description"/>
    <TextView
        android:id="@+id/timestamp"
        android:text="timestamp"
        android:layout_width="fill_parent"
        android:gravity="end"
        android:layout_marginRight="3dp"
        android:textColor="@android:color/darker_gray"
        android:layout_height="wrap_content"
        android:layout_below="@id/geeft_description"
        android:textSize="13sp" />

</RelativeLayout>
<android.support.design.widget.FloatingActionButton
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_marginTop="114dp"
    android:layout_gravity="right"
    android:id="@+id/float_prenotation"
    cardView:backgroundTint="@color/colorPrimary"
    android:layout_centerHorizontal="true"
    android:clickable="true"
    android:src="@drawable/ic_favorite_black_24dp"/>
</android.support.v7.widget.CardView>